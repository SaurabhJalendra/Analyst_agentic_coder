# ========================================
# Analyst Agentic Coder - Environment Configuration
# ========================================

# Claude Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Claude Code Authentication (Required)
# Get these tokens from your Claude Code config after authentication:
# - Linux/Mac: ~/.claude/config.json
# - Windows: %USERPROFILE%\.claude\config.json
CLAUDE_CODE_ACCESS_TOKEN=your_access_token_here
CLAUDE_CODE_REFRESH_TOKEN=your_refresh_token_here

# Default Repository Configuration
# The repository that will be automatically cloned for each session
DEFAULT_REPO_URL=https://github.com/SaurabhJalendra/statement-pipelines.git
DEFAULT_REPO_BRANCH=main

# GitHub Authentication (optional - for private repos)
GITHUB_ACCESS_TOKEN=your_github_token_here

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Workspace Configuration
WORKSPACE_BASE_DIR=./workspaces

# API Configuration
MAX_CONTEXT_LENGTH=200000

# ========================================
# Docker Deployment Configuration
# ========================================

# Port Configuration (for Docker deployment)
BACKEND_PORT=8000
FRONTEND_PORT=80
