# =============================================================================
# Analyst Agentic Coder - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Claude Configuration
# -----------------------------------------------------------------------------
# Claude model to use (optional, has default)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Claude Code CLI tokens (optional - credentials are mounted from ~/.claude/)
# Only needed if you want to use environment-based auth instead of file-based
# CLAUDE_CODE_ACCESS_TOKEN=your-access-token
# CLAUDE_CODE_REFRESH_TOKEN=your-refresh-token

# -----------------------------------------------------------------------------
# Default Repository Configuration (Optional)
# -----------------------------------------------------------------------------
# Repository URL to automatically clone for each new session
# Leave empty to start with an empty workspace
DEFAULT_REPO_URL=

# Branch to checkout (default: main)
DEFAULT_REPO_BRANCH=main

# GitHub Personal Access Token for private repositories (optional)
# Create at: https://github.com/settings/tokens
# Required scopes: repo (for private repos)
GITHUB_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
# Database credentials
POSTGRES_USER=coolbot
POSTGRES_PASSWORD=change-this-to-a-secure-password
POSTGRES_DB=coolbot_db
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# JWT Authentication Configuration
# -----------------------------------------------------------------------------
# Secret key for signing JWT tokens
# Generate a secure random key:
#   python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-this-to-a-secure-random-string

# Token expiration time in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Workspace directory for session files
WORKSPACE_BASE_DIR=./workspaces

# Maximum context length for Claude API
MAX_CONTEXT_LENGTH=200000

# -----------------------------------------------------------------------------
# Port Configuration (Optional)
# -----------------------------------------------------------------------------
# Backend API port (default: 8000)
BACKEND_PORT=8000

# Frontend port (default: 80)
FRONTEND_PORT=80
